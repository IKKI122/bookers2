<h2>Book detail</h2>
<div>
     <table>
        <tbody>
            <tr>
                <td><%= image_tag 'no_image.jpg' %></td>
                <td><%= @book.title %></td>
                <td><%= @book.body %></td>
                <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
                <td>
                <% if @book.user == current_user %>
                    <%= link_to "Destroy", book_path(@book), method: :delete %>
                <% end %>
                </td>
            </tr>
        </tbody>
    </table>
</div>
