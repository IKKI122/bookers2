<h2>User info</h2>
<h2>New book</h2>
    <%= form_with model: @book do |f| %>
        <h4>Title</h4>
            <%= f.text_field :title %>
        <h4>Opinion</h4>
            <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
    <% end %>

<h2>Books</h2>
<% @books.each do |book| %>
<div>
     <table>
        <thead>
            <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <%= link_to book_path(book.id) do %>
                        <%= image_tag 'no_image.jpg' %>
                    <% end %>
                </td>
                <td>
                    <%= link_to book_path(book.id) do %>
                        <%= book.title %>
                    <% end %>
                </td>
                <td><%= book.body %></td>
            </tr>
        </tbody>
    </table>
</div>
<% end %>