<h2>User info</h2>
    <%= link_to "Edit User",edit_user_path(current_user.id) %>
<h2>New book</h2>
    <%= form_with model: @book do |f| %>
        <div>
            <label for="book_title">Title</label>
                <div class="book_title"><%= f.text_field :title %></div>
        </div>
        <div>
            <label for="book_opinion">Opinion</label>
                <div class="book_opinion"><%= f.text_area :body %></div>
        </div>
        <%= f.submit 'Create Book' %>
    <% end %>

<h2>Books</h2>
<div>
     <table>
        <thead>
            <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
            </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
            <tr>
                <td>
                    <%= link_to user_path(book.user.id) do %>
                        <%= image_tag book.user.get_profile_image(100,100) %>
                    <% end %>
                </td>
                <td>
                    <%= link_to book_path(book.id) do %>
                        <%= book.title %>
                    <% end %>
                </td>
                <td><%= book.body %></td>
            </tr>
        <% end %>
        </tbody>
    </table>
</div>
