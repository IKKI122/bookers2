<h2>Books</h2>
<div>
     <table>
        <thead>
            <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
            </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
            <tr>
                <td>
                    <%= link_to user_path(@user.id) do %>
                        <%= image_tag book.user.get_profile_image(100,100) %>
                        <%= @user.name %>
                    <% end %>
                </td>
                <td>
                    <%= link_to book_path(book.id) do %>
                        <%= book.title %>
                    <% end %>
                </td>
                <td><%= book.body %></td>
            </tr>
        <% end %>
        </tbody>
    </table>
</div>